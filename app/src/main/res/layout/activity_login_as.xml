<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        tools:context=".Common.LoginAsActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/gotham"
                android:text="Login Options"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_round_top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_30sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="What is your role?"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_22sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="You can login as admin, driver and user!"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />



                <RelativeLayout
                    android:id="@+id/LoginAsAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:layout_marginBottom="@dimen/_35sdp"
                    android:background="@drawable/bg_round_corners"
                    android:scaleY="0.9">

                    <TextView
                        android:layout_width="@dimen/_190sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="Admin"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/LoginAsDriver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_35sdp"
                    android:background="@drawable/bg_round_corners"
                    android:scaleY="0.9">

                    <TextView
                        android:layout_width="@dimen/_190sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="Driver"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/LoginAsUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_35sdp"
                    android:background="@drawable/bg_round_corners"
                    android:scaleY="0.9">

                    <TextView
                        android:layout_width="@dimen/_190sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="User"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                </RelativeLayout>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_200sdp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="user.json"
                    app:lottie_loop="true" />





            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>
